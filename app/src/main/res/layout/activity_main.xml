<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:alpha="0.5"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="28dp">


        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/pnp"
            android:contentDescription="" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selamat Datang di Politeknik Negeri Padang"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:textSize="17sp"
            android:textColor="#FF9900"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Limau Manis, Padang Sumatera Barat"
            android:fontFamily="sans-serif-medium"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp"/>


        <Button
            android:id="@+id/btnManajemenInformatika"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF8C00"
            android:text="Manajemen Informatika"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginBottom="13dp" />


        <Button
            android:id="@+id/btnTeknikKomputer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#FF8C00"
            android:text="Teknik Komputer"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginBottom="13dp" />


        <Button
            android:id="@+id/btnGaleriPhoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF8C00"
            android:text="Galeri Foto"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

    </LinearLayout>

</RelativeLayout>
